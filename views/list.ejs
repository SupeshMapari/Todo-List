<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task list</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('navbar') %>
    
    <div class="cont">
        <h1>Task List</h1>
        <ul class="task-list">
            <% for (let task = 0; task < result.length; task++) { %>
                <li class="task-item">
                    <div class="task-info">
                        <h3><%= result[task].title %></h3>
                        <p><%= result[task].details %></p>
                    </div>
                    <div class="task-actions">

                        <form action="/update/<%= result[task]._id %>" method="get">
                            <button type="submit" class="update-btn">Update</button>
                        </form>

                        <form action="/delete/<%= result[task]._id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this task?');">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>

                        
                    </div>
                </li>
                <% } %>
            </ul>
            <form action="/add" >
                <button type="submit" class="update-btn">Add Task</button>
            </form>
            <button>hhg</button>
    </div>
</body>
</html>
